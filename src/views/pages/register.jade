extends ../layout

block content
  .container.main-body
    .col-md-7
      form(action="/user/signup", method="post")
        .modal-body
          .form-group
            label.col-form-label(for="singInName") 用户名
            input#singInName.form-control(name="user[name]", type="text")
          .form-group
            label.col-form-label(for="singInPassword") 密码  
            input#singInPassword.form-control(name="user[password]", type="password")
        .modal-footer
          button.btn.btn-success(type="submit") 提交