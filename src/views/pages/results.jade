extends ../layout

block content
  .container.main-body 
    h3 #{keyword}
    .row
      if movies && movies.length > 0
        each item in movies
          .col-sm-4
            .card
              img.card-img-top(src="#{item.poster}", alt="#{item.title}")
              .card-body
                .card-title
                  h5 #{item.title}
                a.btn.btn-primary(href="/movie/#{item._id}", role="button") 立即查看
    ul.pagination
      - for (var i=0; i< totalPage; i++) {
        - if (currentPage === (i + 1)) {
            li.active.page-item
               a.page-link #{currentPage}
        - }
        - else {
            li.page-item
              a.page-link(href="/results?p=#{i}&#{query}") #{i+1}
        - }
      - }