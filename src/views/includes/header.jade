.container.mb20

  .page-header
    h1 #{title}
    .row.clearfix
      .col-md-4
        small 重度小众迷
      .col-md-8
        form(method="GET", action="/results")
          .input-group.col-sm-4.pull-right
            input.form-control(type="text", name='q')
            span.input-group-btn
              button.btn.btn-primary(type="submit") 搜索
nav.navbar.navbar-light.navbar-expand-sm.bg-light.fixed-bottom
  .container
    .navbar-header.mr-auto
      a.navbar-brand(href="/") 小众电影迷
    if user
      div.navbar-text
        span 欢迎您，#{user.name}
        span &nbsp;|&nbsp;
        a.nav-item(href="/logout") 退出
    else
      div.navbar-text
        a.nav-item(href="/register") 注册
        span &nbsp;|&nbsp;
        a.nav-item( href="/login") 登录
